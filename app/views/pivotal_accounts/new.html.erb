<title>Link Pivotal Account</title>
<div class="row">
	<div class="col-md-3 col-sm-2 col-xs-1"></div>
	<div class="col-md-6 col-sm-8 col-xs-10">

	<% if @pivotal_account.errors.any? %>
		<% @pivotal_account.errors.full_messages.each do |message| %>
    		<li><%= message %></li>
    	<% end %>
    <% end %>


    <%= form_for(@pivotal_account) do |f| %>

      <%= f.label :api_key %>
      <%= f.text_field :api_key %>


      <%= f.submit "Link Account", class: "btn btn-large btn-primary" %>
    <% end %>

  	</div>
	<div class="col-md-3 col-sm-2 col-xs-1"></div>
</div>