<div class="page-title-box">
	<h1>pivot<span>all</span></h1>
</div>

<div class="login-card">

	<% if current_user %>
		Logged in as <strong><%= current_user.name %></strong>!
		<%= link_to "Sign out", signout_path, id: "sign_out" %><br><br>
		<% if current_user.pivotal_accounts.any? %>
				<%= link_to "View Projects", pivotal_accounts_path, class: "btn btn-block btn-primary" %>
			<% else %>
				<%= link_to "Add Pivotal Account", new_pivotal_account_path, class: "btn btn-block btn-primary" %>
			<% end %>
		<% else %>
			<h1>Log-in</h1><br>
			<%= link_to "/auth/google_oauth2", id: "sign_in", class: "btn btn-block btn-social btn-google-plus" do %>
			<i class="fa fa-google-plus"></i> Sign in with Google
		<% end %>
	<% end %>

</div>