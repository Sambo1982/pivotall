<h1>Linked Pivotal Acocunts</h1>
<table>
  <thead>
    <tr>
      <th>API Key</th>
      <th></th>
    </tr>
  </thead>

  <tbody>	
	<% @pivotal_accounts.each do |p| %>
	  <tr>
	    <td><%= p.api_key %></td>
	    <td><%= link_to 'Destroy', p, method: :delete %></td>
	  </tr>
	<% end %>

  </tbody>
</table>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Pivotal ID</th>
      <th>Project Name</th>
      <th>Subscribe Project</th>
    </tr>
  </thead>

  <tbody> 

    <% @projects.each do |p| %>
      <tr>
        <td><%= p.external_id %></td>
        <td><%= p.name %></td>
        <td>
          <%= check_box_tag 'subscribe', p.id , p.subscribe, :class => "subscribe-check" %>
        </td>
      </tr>
    <% end %>


  </tbody>
</table>

